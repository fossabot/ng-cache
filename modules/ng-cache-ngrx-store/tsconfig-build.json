{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "../../dist/packages/ng-cache-ngrx-store",

    "paths": {
      "@ngrx/store": [ "../../node_modules/@ngrx/store" ],
      "@bizappframework/ng-cache": [ "../../dist/packages/ng-cache" ]
    }
  },
  "files": [
    "public_api.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "@bizappframework/ng-cache-ngrx-store"
  }
}
